extends template/layout
	
	
//- --------------- Header -------------- //
block custom_header
	script(src='/js/part2.js')
	script(src='/js/blockchain.js')
	script(type='text/javascript').
		$(document).ready(function(){
			
		});
		
		
//- --------------- Navigation Bar  -------------- //
block navpanel
	include template/nav_part2
	
	
//- --------------- Main Stuff  -------------- //
block content
	#contentPanel
		#loginContainer
			h1  Login 
			img(src="/imgs/login.png", class="movie-poster")
			hr

			form(method="POST" action="#" style="text-align: center;")
				p.hint
					| !{bag.session.error_msg}
					br
					br
				p
					.hint Username
					input(type="radio" name="username" hidden)
					input(type="text" placeholder="enrollID" name="username" required)
				p
					.hint Password
					input(type="password" name="password" required)
				button(type="submit")#loginButton Login
		
		#registerContainer
			h1 Register
			img(src="/imgs/register.png", class="movie-poster")
			hr

			form(method="POST" action="#" style="text-align: center;")
				p.hint
					| !{bag.session.reg_error_msg}
					| !{bag.session.registration}
					br
					br
				p
					.hint Role
					select(name="role")
						option Donor
						option Acceptor
						option CharityMonitor
					
				p
					.hint Desired Username with selected Role
					input#register_username(type="text" placeholder="enrollID" name="username" required)
				button(type="submit")#registerButton Register
				br
				br
				p.
					User roles are assigned through tags in the user name.  
					Select appropriate role to register as that user type.  Everyone else is will be considered a regular user.
					Chaincode provides default password for now. User Selected Password is taken as future enhancement.

